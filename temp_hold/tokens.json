{
  "$schema": "https://design-tokens.org/schema.json",
  "name": "Dhison Design System",
  "version": "0.1.0",

  "primitives": {
    "color": {
      "white": "#FFFFFF",
      "black": "#000000",

      "gray": {
        "50": "#FAFAFA",
        "100": "#F5F5F5",
        "200": "#E5E5E5",
        "300": "#D4D4D4",
        "400": "#A3A3A3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#1A1A1A",
        "950": "#0F0F0F"
      },

      "emerald": {
        "50": "#ECFDF5",
        "100": "#D1FAE5",
        "200": "#A7F3D0",
        "300": "#6EE7B7",
        "400": "#34D399",
        "500": "#10A860",
        "600": "#0D9B58",
        "700": "#0F8A50",
        "800": "#065F3A",
        "900": "#064E32"
      },

      "red": {
        "50": "#FEF2F2",
        "100": "#FEE2E2",
        "200": "#FECACA",
        "300": "#FCA5A5",
        "400": "#F87171",
        "500": "#DC2626",
        "600": "#B91C1C",
        "700": "#991B1B",
        "800": "#7F1D1D",
        "900": "#450A0A"
      },

      "amber": {
        "500": "#E4A010"
      }
    },

    "fontFamily": {
      "sans": [
        "FK Grotesk",
        "Untitled Sans",
        "Inter",
        "Helvetica Neue",
        "Helvetica",
        "Arial",
        "sans-serif"
      ],
      "serif": ["Charter", "Domine", "Palatino", "Georgia", "serif"],
      "mono": ["IBM Plex Mono", "Geist Mono", "CommitMono", "Berkeley Mono", "monospace"]
    },

    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },

    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },

    "lineHeight": {
      "none": 1,
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },

    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    },

    "spacing": {
      "0": "0",
      "px": "1px",
      "0.5": "0.125rem",
      "1": "0.25rem",
      "1.5": "0.375rem",
      "2": "0.5rem",
      "2.5": "0.625rem",
      "3": "0.75rem",
      "3.5": "0.875rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "7": "1.75rem",
      "8": "2rem",
      "9": "2.25rem",
      "10": "2.5rem",
      "11": "2.75rem",
      "12": "3rem",
      "14": "3.5rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "28": "7rem",
      "32": "8rem"
    },

    "borderWidth": {
      "0": "0",
      "hairline": "1px",
      "default": "2px",
      "thick": "4px"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "default": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem"
    }
  },

  "semantic": {
    "light": {
      "color": {
        "bg": {
          "primary": "{primitives.color.gray.50}",
          "secondary": "{primitives.color.white}",
          "tertiary": "{primitives.color.gray.100}",
          "inverse": "{primitives.color.gray.900}",
          "accent": "{primitives.color.emerald.500}",
          "accentSubtle": "{primitives.color.emerald.50}",
          "error": "{primitives.color.red.50}",
          "errorSolid": "{primitives.color.red.500}"
        },
        "text": {
          "primary": "{primitives.color.gray.900}",
          "secondary": "{primitives.color.gray.600}",
          "muted": "{primitives.color.gray.400}",
          "inverse": "{primitives.color.gray.50}",
          "accent": "{primitives.color.emerald.600}",
          "error": "{primitives.color.red.600}",
          "onAccent": "{primitives.color.white}"
        },
        "border": {
          "default": "{primitives.color.gray.200}",
          "strong": "{primitives.color.gray.900}",
          "muted": "{primitives.color.gray.100}",
          "accent": "{primitives.color.emerald.500}"
        },
        "icon": {
          "primary": "{primitives.color.gray.900}",
          "secondary": "{primitives.color.gray.500}",
          "accent": "{primitives.color.emerald.500}"
        }
      }
    },

    "dark": {
      "color": {
        "bg": {
          "primary": "{primitives.color.gray.950}",
          "secondary": "{primitives.color.gray.900}",
          "tertiary": "{primitives.color.gray.800}",
          "inverse": "{primitives.color.gray.50}",
          "accent": "{primitives.color.emerald.500}",
          "accentSubtle": "{primitives.color.emerald.900}",
          "error": "{primitives.color.red.900}",
          "errorSolid": "{primitives.color.red.500}"
        },
        "text": {
          "primary": "{primitives.color.gray.50}",
          "secondary": "{primitives.color.gray.400}",
          "muted": "{primitives.color.gray.600}",
          "inverse": "{primitives.color.gray.900}",
          "accent": "{primitives.color.emerald.400}",
          "error": "{primitives.color.red.400}",
          "onAccent": "{primitives.color.white}"
        },
        "border": {
          "default": "{primitives.color.gray.800}",
          "strong": "{primitives.color.gray.50}",
          "muted": "{primitives.color.gray.900}",
          "accent": "{primitives.color.emerald.500}"
        },
        "icon": {
          "primary": "{primitives.color.gray.50}",
          "secondary": "{primitives.color.gray.500}",
          "accent": "{primitives.color.emerald.400}"
        }
      }
    },

    "typography": {
      "display": {
        "fontFamily": "{primitives.fontFamily.sans}",
        "fontSize": "{primitives.fontSize.4xl}",
        "fontWeight": "{primitives.fontWeight.bold}",
        "lineHeight": "{primitives.lineHeight.tight}",
        "letterSpacing": "{primitives.letterSpacing.tight}"
      },
      "heading1": {
        "fontFamily": "{primitives.fontFamily.sans}",
        "fontSize": "{primitives.fontSize.3xl}",
        "fontWeight": "{primitives.fontWeight.bold}",
        "lineHeight": "{primitives.lineHeight.tight}",
        "letterSpacing": "{primitives.letterSpacing.tight}"
      },
      "heading2": {
        "fontFamily": "{primitives.fontFamily.sans}",
        "fontSize": "{primitives.fontSize.2xl}",
        "fontWeight": "{primitives.fontWeight.semibold}",
        "lineHeight": "{primitives.lineHeight.snug}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "heading3": {
        "fontFamily": "{primitives.fontFamily.sans}",
        "fontSize": "{primitives.fontSize.xl}",
        "fontWeight": "{primitives.fontWeight.semibold}",
        "lineHeight": "{primitives.lineHeight.snug}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "heading4": {
        "fontFamily": "{primitives.fontFamily.sans}",
        "fontSize": "{primitives.fontSize.lg}",
        "fontWeight": "{primitives.fontWeight.medium}",
        "lineHeight": "{primitives.lineHeight.normal}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "body": {
        "fontFamily": "{primitives.fontFamily.serif}",
        "fontSize": "{primitives.fontSize.base}",
        "fontWeight": "{primitives.fontWeight.regular}",
        "lineHeight": "{primitives.lineHeight.relaxed}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "bodySmall": {
        "fontFamily": "{primitives.fontFamily.serif}",
        "fontSize": "{primitives.fontSize.sm}",
        "fontWeight": "{primitives.fontWeight.regular}",
        "lineHeight": "{primitives.lineHeight.relaxed}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "label": {
        "fontFamily": "{primitives.fontFamily.mono}",
        "fontSize": "{primitives.fontSize.xs}",
        "fontWeight": "{primitives.fontWeight.medium}",
        "lineHeight": "{primitives.lineHeight.normal}",
        "letterSpacing": "{primitives.letterSpacing.wider}"
      },
      "code": {
        "fontFamily": "{primitives.fontFamily.mono}",
        "fontSize": "{primitives.fontSize.sm}",
        "fontWeight": "{primitives.fontWeight.regular}",
        "lineHeight": "{primitives.lineHeight.normal}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      },
      "caption": {
        "fontFamily": "{primitives.fontFamily.mono}",
        "fontSize": "{primitives.fontSize.xs}",
        "fontWeight": "{primitives.fontWeight.regular}",
        "lineHeight": "{primitives.lineHeight.normal}",
        "letterSpacing": "{primitives.letterSpacing.wide}"
      },
      "metadata": {
        "fontFamily": "{primitives.fontFamily.mono}",
        "fontSize": "{primitives.fontSize.xs}",
        "fontWeight": "{primitives.fontWeight.regular}",
        "lineHeight": "{primitives.lineHeight.tight}",
        "letterSpacing": "{primitives.letterSpacing.normal}"
      }
    },

    "spacing": {
      "page": {
        "margin": "{primitives.spacing.6}",
        "marginLg": "{primitives.spacing.16}",
        "maxWidth": "72rem"
      },
      "section": {
        "gap": "{primitives.spacing.16}",
        "gapSm": "{primitives.spacing.8}"
      },
      "card": {
        "padding": "{primitives.spacing.6}",
        "paddingSm": "{primitives.spacing.4}",
        "gap": "{primitives.spacing.4}"
      },
      "inline": {
        "gap": "{primitives.spacing.2}",
        "gapLg": "{primitives.spacing.4}"
      }
    },

    "border": {
      "card": {
        "width": "{primitives.borderWidth.hairline}",
        "radius": "{primitives.borderRadius.none}"
      },
      "input": {
        "width": "{primitives.borderWidth.hairline}",
        "radius": "{primitives.borderRadius.sm}"
      },
      "button": {
        "width": "{primitives.borderWidth.hairline}",
        "radius": "{primitives.borderRadius.none}"
      },
      "divider": {
        "width": "{primitives.borderWidth.hairline}"
      }
    }
  },

  "components": {
    "card": {
      "background": "{semantic.light.color.bg.secondary}",
      "border": "{semantic.light.color.border.default}",
      "borderWidth": "{semantic.border.card.width}",
      "borderRadius": "{semantic.border.card.radius}",
      "padding": "{semantic.spacing.card.padding}",
      "shadow": "none"
    },
    "button": {
      "primary": {
        "background": "{semantic.light.color.bg.inverse}",
        "backgroundHover": "{primitives.color.gray.800}",
        "text": "{semantic.light.color.text.inverse}",
        "border": "none"
      },
      "secondary": {
        "background": "transparent",
        "backgroundHover": "{semantic.light.color.bg.tertiary}",
        "text": "{semantic.light.color.text.primary}",
        "border": "{semantic.light.color.border.default}"
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "{semantic.light.color.bg.tertiary}",
        "text": "{semantic.light.color.text.primary}",
        "border": "none"
      }
    },
    "link": {
      "color": "{semantic.light.color.text.primary}",
      "colorHover": "{semantic.light.color.text.accent}",
      "decoration": "underline",
      "decorationHover": "underline"
    },
    "input": {
      "background": "{semantic.light.color.bg.secondary}",
      "border": "{semantic.light.color.border.default}",
      "borderFocus": "{semantic.light.color.border.strong}",
      "text": "{semantic.light.color.text.primary}",
      "placeholder": "{semantic.light.color.text.muted}"
    },
    "divider": {
      "color": "{semantic.light.color.border.default}",
      "colorStrong": "{semantic.light.color.border.strong}"
    }
  }
}
